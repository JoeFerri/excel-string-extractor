$ cd C:\workspaces\GitHub\excel-string-extractor && .venv\Scripts\activate

$ cd C:\workspaces\GitHub\excel-string-extractor
$ python -m venv .venv
$ .venv\Scripts\activate

(.venv) $ pip install wheel
(.venv) $ pip install twine
(.venv) $ pip install tox

// installa il pacchetto nell'ambiente virtuale
// -e sta per editor mode
(.venv) $ pip install -e .
// installa il pacchetto normalmente in build
(.venv) $ pip install .
// crea la cartella dist
(.venv) $ python setup.py sdist
(.venv) $ python setup.py bdist_wheel
// controlla i file
(.venv) $ twine check dist/*
// crea il file requirements.txt
(.venv) $ pip freeze > requirements.txt
// controlla lo stile del codice python e ignora l'indentazione con 2 soli spazi
(.venv) $ flake8 --ignore E111 src tests

####################################################################
// pubblica il pacchetto
(.venv) $ twine upload -r exsextractor dist/*
####################################################################

(.venv) $ pip uninstall exsextractor
(.venv) $ pip uninstall openpyxl

(.venv) $ python
(.venv) >>> import exsextractor as ex
(.venv) >>> ex.test()

// esegue il test
(.venv) $ cd path/test
(.venv) $ pytest
# Execute the test function with “quiet” reporting mode:
(.venv) $ pytest -q